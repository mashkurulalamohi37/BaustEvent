# Uncomment this line to define a global platform for your project
platform :ios, '13.0'

# CocoaPods analytics sends network stats synchronously affecting flutter build latency.
ENV['COCOAPODS_DISABLE_STATS'] = 'true'

project 'Runner', {
  'Debug' => :debug,
  'Profile' => :release,
  'Release' => :release,
}

def flutter_root
  generated_xcode_build_settings_path = File.expand_path(File.join('..', 'Flutter', 'Generated.xcconfig'), __FILE__)
  unless File.exist?(generated_xcode_build_settings_path)
    raise "#{generated_xcode_build_settings_path} must exist. If you're running pod install manually, make sure flutter pub get is executed first"
  end

  File.foreach(generated_xcode_build_settings_path) do |line|
    matches = line.match(/FLUTTER_ROOT\=(.*)/)
    return matches[1].strip if matches
  end
  raise "FLUTTER_ROOT not found in #{generated_xcode_build_settings_path}. Try deleting Generated.xcconfig, then run flutter pub get"
end

require File.expand_path(File.join('packages', 'flutter_tools', 'bin', 'podhelper'), flutter_root)

flutter_ios_podfile_setup

# Hook into dependency resolution to modify MLKitCommon's GoogleUtilities requirement
module Pod
  class Resolver
    alias_method :original_specs_for_dependency, :specs_for_dependency
    
    def specs_for_dependency(dependency)
      specs = original_specs_for_dependency(dependency)
      
      # If this is MLKitCommon, modify its GoogleUtilities dependency requirement
      if dependency.name == 'MLKitCommon'
        specs.each do |spec|
          spec.dependencies.each do |dep|
            if dep.name == 'GoogleUtilities' || dep.name.include?('GoogleUtilities')
              # Relax the version constraint to allow 8.x
              dep.requirement = Pod::Requirement.create(['>= 7.0'])
            end
          end
        end
      end
      
      specs
    end
  end
end

target 'Runner' do
  use_frameworks!
  use_modular_headers!

  flutter_install_all_ios_pods File.dirname(File.realpath(__FILE__))
  
  # Note: Firebase pods are automatically managed by Flutter plugins
  # (firebase_core, firebase_auth, cloud_firestore, firebase_storage, firebase_messaging)
  # No need to declare them explicitly here - this prevents version conflicts
  
  # WORKAROUND: Force GoogleUtilities to 8.1.0 to resolve conflict
  # This is a known issue: mobile_scanner's MLKit requires ~> 7.0, Firebase requires ~> 8.1
  # We force 8.1.0 and hope MLKit is backward compatible (it often is at runtime)
  # If QR scanning fails, consider updating mobile_scanner or using an alternative scanner
  pod 'GoogleUtilities', '8.1.0', :modular_headers => true
end

post_install do |installer|
  installer.pods_project.targets.each do |target|
    flutter_additional_ios_build_settings(target)
    target.build_configurations.each do |config|
      config.build_settings['IPHONEOS_DEPLOYMENT_TARGET'] = '13.0'
      config.build_settings['ENABLE_BITCODE'] = 'NO'
      # Allow non-modular includes for compatibility
      config.build_settings['CLANG_ALLOW_NON_MODULAR_INCLUDES_IN_FRAMEWORK_MODULES'] = 'YES'
    end
  end
end

