<?xml version="1.0" encoding="utf-8"?>
<!-- Data Extraction Rules for Android 12+ (API 31+) -->
<data-extraction-rules>
    <!-- 
        Cloud backup rules for Android 12+
        Controls what data is backed up to Google Drive
    -->
    <cloud-backup>
        <!-- Include app data -->
        <include domain="sharedpref" path="." />
        <include domain="database" path="." />
        <include domain="file" path="." />
        
        <!-- Exclude sensitive data -->
        <exclude domain="sharedpref" path="FlutterSecureStorage" />
        <exclude domain="sharedpref" path="auth_prefs" />
        <exclude domain="database" path="secure.db" />
        <exclude domain="file" path="cache/" />
        <exclude domain="file" path="code_cache/" />
    </cloud-backup>
    
    <!-- 
        Device transfer rules
        Controls what data is transferred when user switches devices
    -->
    <device-transfer>
        <!-- Include app data -->
        <include domain="sharedpref" path="." />
        <include domain="database" path="." />
        <include domain="file" path="." />
        
        <!-- Exclude sensitive data -->
        <exclude domain="sharedpref" path="FlutterSecureStorage" />
        <exclude domain="sharedpref" path="auth_prefs" />
        <exclude domain="database" path="secure.db" />
        <exclude domain="file" path="cache/" />
        <exclude domain="file" path="code_cache/" />
    </device-transfer>
</data-extraction-rules>
